{% extends 'base.html.twig' %}

{% block title %}Hello ConnexionController!{% endblock %}

{% block body %}



    <div class="container py-5">
        <div class="card my-5 mx-auto w-50">
            <div class="card-body">
                {% if error %}
                    <p class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                {% endif %}
                <form action="{{ path('app_connexion') }}" method="post">
                    <div class="form-outline mb-4">
                        <label class="form-label" for="username">Adresse Email</label>
                        <input type="text" id="username" class="form-control" name="_username" value="{{ lastUsername }}"/>
                    </div>
                    <div class="form-outline mb-4">
                        <label class="form-label" for="password">Mot de passe</label>
                        <input type="password" id="password" class="form-control" name="_password" />
                    </div>
                    <input type="hidden" name="_target_path" value="/etablissements">
                    <button type="submit" class="btn btn-primary btn-block mb-4">Se connecter</button>
                </form>
            </div>
        </div>
    </div>



{% endblock %}
